<p id="notice"><%= notice %></p>

<h4 class='d-flex justify-content-between mb-4'>
  <span>Posts</span>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary'%>
</h4>


<% @posts.each do |post| %>
  <%= link_to edit_post_path(post) do %>
     <div class="card mb-3">
      <div class="card-body">
        <div class="row">
           <div class="col-md-3">
            <%if post.header_image.present?%>
              <%= image_tag(post.header_image,  width: '60%')%>
            <%end%>
            
           </div>
           <div class="col-md-9">
            <h5 class="card-title mb-1 text-dark"> <%= post.title%></h5>
            <p class="text-secondary mb-0"> <%= post.description%></p>
           </div>
        </div>
        
      </div>
     </div>
   <%end%>
<%end%>
